<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1>Edit Unit</h1>
        <form action="/unit/<%=unit._id%>?_method=PUT" method="POST">
            <label for="unit">Unit Number</label>
        <input type="text" name="unit" id="unit" value="<%= unit.unit%>">
        <label for="city">City</label>
        <input type="text" name="city" id="city" value="<%= unit.city%>">
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="<%= unit.address%>">
        <label for="rented">Rented?</label>
        <input type="checkbox" name="rented" id="rented" value="<%= unit.rented%>"><br>
        <label for="rentedfrom">Rented From</label>
        <input type="text" name="rentedfrom" id="rentedfrom" value="<%= unit.rentedfrom%>"><br>
        <label for="renteduntil">Rented Until</label>
        <input type="text" name="renteduntil" id="renteduntil" value="<%= unit.renteduntil%>"><br>
        <label for="amount">Rent Amount</label>
        <input type="number" name="amount" id="amount" value="<%= unit.amount%>"><br>
        <input type="submit" name="" value="Submit Changes"/>
        </form>
    </body>
</html>
